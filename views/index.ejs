<div ng-app="Shortly">
  <div class='navigation'>
    <ul>
      <li><a href='#' class='index' ng-click=''>All Links</a></li>
      <li><a href='#' class='create' ng-click=''>Shorten</a></li>
    </ul>
      <a href='/logout' class='logout'>Logout</a>
  </div>

  <div ng-controller='links'>
    <div class='info' ng-repeat="link in links">
      <div class='link'>
        <img src='/redirect_icon.png'/>
        <div class='visits'><span class='count'>{{ link.visits }}</span>Visits</div>
        <div class='title'>{{ link.title }}</div>
        <div class='original'>{{ link.url }}</div>
        <a ng-href= '{{ link.base_url }}/{{ link.code }}'>{{ link.base_url }}/{{ link.code }}</a>
      </div>
    </div>
  </div>
</div>
